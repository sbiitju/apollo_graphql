<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.shahinbasahr.apollo.maps.MapsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:layout_constraintBottom_toTopOf="@id/tvLocationActivityMap"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            tools:context=".maps.MapsActivity" />

        <TextView
            android:id="@+id/tvAreaActivityMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#E6FF5722"
            android:gravity="center"
            android:padding="15dp"
            android:text="@{viewmodel.buttonSelectLocationText}"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/tvLocationActivityMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#C9ECE5E5"
            android:gravity="center"
            android:padding="15dp"
            android:text="@{viewmodel.etSearch}"
            android:textColor="@color/black"
            android:textSize="15sp"
            map:layout_constraintBottom_toTopOf="@id/tvAreaActivityMap"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btnMyLocation"
            android:src="@drawable/ic_baseline_my_location_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="29dp"
            map:layout_constraintBottom_toTopOf="@id/tvLocationActivityMap"
            map:layout_constraintEnd_toEndOf="parent" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_location_on_24"
            android:gravity="center"
            android:textSize="20sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>